<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/activity_edit_language_item_height"
    android:orientation="horizontal"
    android:layout_centerVertical="true"
    >

    <ImageView
        android:id="@+id/btRemoveWord"
        android:layout_width="@dimen/activity_home_button_size"
        android:layout_height="@dimen/activity_home_button_size"
        android:padding="@dimen/activity_home_button_padding"
        android:src="@drawable/ic_remove_language"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rect_red_3"
        >

        <EditText
            android:id="@+id/etItem"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:padding="@dimen/activity_edit_language_word_padding"
            android:paddingRight="@dimen/activity_edit_language_word_padding_right"
            android:textSize="@dimen/activity_home_text_view_font_size"
            android:fontFamily="sans-serif-light"
            android:gravity="start"
            android:textColor="@color/colorBlack"
            android:maxLines="1"
            android:ellipsize="end"
            />

    </LinearLayout>

</LinearLayout>