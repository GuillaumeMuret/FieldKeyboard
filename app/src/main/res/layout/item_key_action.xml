<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/activity_edit_language_item_height"
    android:layout_width="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/btRemoveWord"
        android:layout_width="@dimen/activity_home_button_size"
        android:layout_height="@dimen/activity_home_button_size"
        android:padding="@dimen/activity_home_button_padding"
        android:src="@drawable/ic_remove_language"
        />

    <fr.ganfra.materialspinner.MaterialSpinner
        android:id="@+id/spAction"
        android:layout_width="match_parent"
        android:layout_height="@dimen/activity_edit_language_item_height"
        android:background="#FFFFFFFF"

        app:ms_thickness="0dp"
        app:ms_enableFloatingLabel="false"
        app:ms_enableErrorLabel="false"
        app:ms_arrowSize="@dimen/main_activity_dialog_spinner_arrow_size"
        app:ms_arrowColor="@color/colorPrimary"
        app:ms_alignLabels="false"
        />

</LinearLayout>